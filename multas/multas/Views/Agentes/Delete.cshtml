@model multas.Models.Agentes

@{
    ViewBag.Title = "Delete";
}

<h2>Apagar um agente</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    //@*este 'helper' mostra as mensagens de erro que existem associadas ao Modelo*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h4>Agentes</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Esquadra)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Esquadra)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>

        <dd>
            <img src="~/imagens/@Model.Fotografia" height="100" />
            @*@Html.DisplayFor(model => model.Fotografia)*@
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-default" /> |
            @Html.ActionLink("Regressar à listagem", "Index")
        </div>
    }
